# Auto detect text files and normalize line endings to LF
*          text=auto

# C# files
*.cs       text diff=csharp
*.csx      text diff=csharp
*.cshtml   text diff=html
*.razor    text diff=html

# .NET solution and project files (use CRLF for better compatibility with Visual Studio)
*.sln      text eol=crlf
*.slnx     text eol=crlf
*.csproj   text eol=crlf
*.vbproj   text eol=crlf
*.vcxproj  text eol=crlf
*.fsproj   text eol=crlf
*.dbproj   text eol=crlf
*.props    text eol=crlf
*.targets  text eol=crlf

# .NET configuration files
*.config   text eol=crlf
*.json     text
*.jsonc    text

# Godot files
*.gd       text diff=csharp
*.tscn     text
*.tres     text
*.godot    text
*.cfg      text
*.import   text eol=lf

# Godot binary files
*.scn      binary
*.stex     binary
*.ctex     binary
*.res      binary
*.translation binary

# Documentation
*.md       text diff=markdown
*.txt      text
*.xml      text

# Scripts
*.sh       text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.ps1      text eol=crlf

# Graphics
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.bmp      binary
*.ico      binary
*.svg      text
*.psd      binary
*.ai       binary
*.exr      binary
*.hdr      binary

# Audio
*.mp3      binary
*.ogg      binary
*.wav      binary

# Fonts
*.ttf      binary
*.otf      binary
*.woff     binary
*.woff2    binary

# Archives
*.zip      binary
*.7z       binary
*.tar      binary
*.gz       binary

# Executables and libraries
*.exe      binary
*.dll      binary
*.so       binary
*.dylib    binary
*.pdb      binary
